<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TODO App</title>
    <!--Css-->
    <link rel="stylesheet" href="/css/style.css">
    <!--Font Awesome for icons-->
    <script src="https://kit.fontawesome.com/8d8b4be0c6.js" crossorigin="anonymous"></script>
</head>

<body>
    <div class="main">
        <h1 class="center" id="header">TODO App</h1>
        <hr>
        <!--Form to take Input-->
        <form action="/create-task" method="post">
            <!--Description-->
            <div id="description">
                <label for="name">DESCRIPTION</label>
                <input required type="text" name="name" id="name" placeholder="What do u want to do?">
            </div>
            <hr>
            <div id="category-date">
                <!--Category-->
                <div id="category">
                    <label for="category">CATEGORY</label>
                    <select name="category" class="dropdown">
                        <option value="" selected>Select a category</option>
                        <option value="work">Work</option>
                        <option value="college">College</option>
                        <option value="family">Family</option>
                        <option value="personal">Personal</option>
                    </select>
                    </td>
                </div>
                <div class="verticalLine">
                </div>
                <!--Due Date-->
                <div id="date"><label for="date">DUE DATE</label>
                    <input required type="date" name="date" id="date">
                </div>
            </div>
            <hr>
            <div class="button">
                <!--Submit Button-->
                <button type="submit" id="submit"><span><i class="fa-solid fa-plus"></i>&nbsp;ADD TASK</span></button>
                <!--Delete task which are completed-->
                <button type="button" id="delete"><a href="/delete-task"><span><i class="fa-solid fa-trash"></i>&nbsp;DELETE TASKS</a></span></button>
            </div>
        </form>
        <!--A dropdown For Filtering list by date, by name -->
        <div class="dropdown">
            <button onclick="myFunction()" class="dropbtn"><span><i class="fa-solid fa-filter"></span></i> Filter</button>
            <div id="myDropdown" class="dropdown-content">
              <a href="/sort-by-date">Sort By Date</a>
              <a href="/sort-by-name">Sort By Name</a>
              <a href="/keep-same">Bring Back</a>
            </div>
        </div> 
        <!--List of Tasks-->
        <div id="container">
            <ul>
                <% for(i of Task_list){ %>
                    <hr>
                    <li>
                        <!--Checkbox-->
                        <div id="checkbox">
                            <% if(i.status){ %>
                                <a href="/update-task/?id=<%=i._id%>" class="completed"><i class="fa-solid fa-square-check"></i></a>
                            <% } else{ %>
                                    <a href="/update-task/?id=<%=i._id%>"><i class="fa-solid fa-square"></i></a>
                            <% } %>
                        </div>
                        <!--Date and Name-->
                        <div id="date-name">
                            <!--When task is mark completed then strikethrough text appears-->
                            <% if(i.status){ %>
                                <p class="strike">
                                    <%= i.name %>
                                </p>
                                <p class="strike">
                                    <i class="fa-solid fa-calendar-days"></i>
                                    <%= i.date%>
                                </p>
                            <% } else{ %>
                                <p>
                                    <%= i.name %>
                                </p>
                                <p>
                                    <i class="fa-solid fa-calendar-days"></i>
                                    <%= i.date%>
                                </p>
                            <% }%>
                        </div>
                        <!--Category-->
                        <div id="priority">
                            <% if(i.category=="work" ){ %>
                                <div class="work">
                                    <p>Work</p>
                                    <i class="fas fa-briefcase"></i>
                                </div>
                            <% } else if(i.category=="college" ){ %>
                                <div class="college">
                                    <p>College</p>
                                    <i class="fas fa-book-reader"></i>
                                </div>
                            <% } else if(i.category=="family" ){ %>
                                <div class="family">
                                    <p>Family</p>
                                    <i class="fas fa-home"></i>
                                </div>
                            <% } else if(i.category=="personal" ){ %>
                                <div class="personal">
                                    <p>Personal</p>
                                    <i class="fa-solid fa-person"></i>
                                </div>
                            <% } %>
                        </div>
                    </li>
                    <% } %>
            </ul>
        </div>
    </div>
    <!--Script for dropdown-->
    <script src="/js/home.js"></script>
</body>

</html>